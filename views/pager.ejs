<ul id='pager' class="pager">
  <% if (page.count > 1) { %>
    <% if (page.number) { %>
      <li><a id='prev' href='/<%= page.number %>'><i class="arrow">&larr;</i> Prev</a></li>
    <% } %>
    <% if (page.number < page.count - 1) { %>
      <% if (page.number) { %>
         &nbsp;&nbsp;
      <% } %>
      <li><a id='next'href='/<%= page.number + 2 %>'>Next <i class="arrow">&rarr;</i></a></li>
    <% } %>
  <% } %>
</ul>

